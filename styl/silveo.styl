.onedot
  height 20px
  float left

.content
  //max-width 1100px
  margin auto
  position relative

h1
h2
h3
h4
h5
  font-family: 'Josefin Sans', sans-serif;
  font-weight 400

h1
  font-size 3em
h2
  font-size 2.5em
  color theblue
  text-transform uppercase
h3
  font-size 2em
  margin-top 50px
h4
  font-size 1.5em
h5
  font-size 1.2em
p
  font-size 1.1em
  font-weight 200

.approach
  background:  url(../images/appbg.png) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  padding-bottom 40px
  margin-bottom 50px
  position relative

h2.bigtitle
  display inline-block
  margin 40px
  margin-top 60px
  background #F7931D
  font-size 20px
  padding 10px 20px
  color #ffffff
  line-height 20px

.bigtitle:before
  display inline-block
  margin-right 10px
  width 18px
  height 18px
  background:  url(../images/dot.png) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  content ''

h2.catchphrase
  color #ffffff
  margin 0 0 30px 40px
  font-weight 200
  text-shadow: 2px 2px #111;

.halfcol
  position relative
  margin-bottom 20px
  h3.catch2
    margin 0
    padding 0
    font-size 20px
    color #ffffff
    font-weight 200
    text-shadow: 1px 1px #111;
    margin-left 20px
    margin-bottom 10px
  p.explain
    margin-left 20px
    color #ffffff
    font-size 15px
    margin-bottom 0
  img
    width 94%
    margin 10px 3%
    border 1px solid #ffffff

.halfcol:before
  position absolute
  background rgba(255,255,255,1)
  top 0
  bottom 0
  left 0
  width 5px
  content ''

.clear
  clear both

.quote
  text-align center
  font-size 30px
  margin 20px 0

.author
  text-align right
  font-size 25px
  font-weight bold
  margin-bottom 40px

.competencies
  background #194577 url(../images/pattern.svg) no-repeat center center
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  padding-bottom 30px
  margin-bottom 50px

.motto
  margin 50px 0
  img
    width 100%

.team
  //background:  url(../images/teambg.png) no-repeat center center;
  background #194577 url(../images/cubes.png)
  padding-bottom 40px
  padding 20px
  margin-bottom 50px

  .onemember
    background #ffffff
    display inline-block
    //width 100%
    margin auto
    height 200px
    position relative
    margin-top 100px
    width 100%

