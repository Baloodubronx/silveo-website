.onedot
  height 20px
  float left

.content
  //max-width 1100px
  margin auto

.container
  max-width 1100px
  margin auto
  padding 60px 0 80px 0

.container:after
  border-bottom 3px solid theorange
  opacity 0.5
  content ''
  position absolute
  bottom 0
  left 0
  width 100%
  height 2px

h1
h2
h3
h4
h5
  font-family: 'Josefin Sans', sans-serif;
  font-weight 400

h1
  font-size 3em
h2
  font-size 2.5em
  color theblue
  text-transform uppercase
h3
  font-size 2em
  margin-top 50px
h4
  font-size 1.5em
h5
  font-size 1.2em
p
  font-size 1.1em
  font-weight 200

img.padded
  margin-top 40px

.approach
  background:  url(../images/appbg.png) no-repeat center center;
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  position relative

h2.bigtitle
  display block
  margin 0 0 40px 0
  //background #F7931D
  font-size 30px
  padding 0px
  color #ffffff
  text-align center


h2.catchphrase
  color #ffffff
  margin 0 0 50px 0
  font-weight 200
  text-shadow: 2px 2px #111
  text-align center

.halfcol
  position relative
  margin-bottom 20px
  h3.catch2
    margin 0
    padding 0
    font-size 20px
    color #ffffff
    font-weight 200
    text-shadow: 1px 1px #111;
    margin-left 20px
    margin-bottom 10px
  p.explain
    margin-left 20px
    color #ffffff
    font-size 15px
    margin-bottom 0
  img
    width 94%
    margin 10px 3%
    border 1px solid #ffffff

.halfcol:before
  position absolute
  background rgba(255,255,255,1)
  top 0
  bottom 0
  left 0
  width 5px
  content ''

.clear
  clear both

.quote
  text-align center
  font-size 30px
  margin 20px 0

.author
  text-align right
  font-size 25px
  font-weight bold
  margin-bottom 40px

.competencies
  background #194577 url(../images/pattern.svg) no-repeat center center
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;

.motto
  margin 50px 0
  img
    width 100%

.team
  //background:  url(../images/teambg.png) no-repeat center center;
  background #194577 url(../images/cubes.png)

  .onemember
    background #ffffff
    display inline-block
    //width 100%
    margin auto
    height 200px
    position relative
    margin-top 100px
    width 100%

    img
      width 150px
      position absolute
      top -70px
      left 50px
    p
      margin 10px
      margin-top 80px
      text-align center
      font-size 18px

  .fewnumbers
    margin 60px auto
    img
      width 80%
      display block
      margin auto
      background #ffffff
      padding 20px

.location
  background:  #194577

a.trustus
  display block
  text-align center
  margin 10px 0
  font-size 30px

#title1, #title2, #title3
  animation-duration: 1s;

#title1
  animation-delay: 1s;

#title2
  animation-delay 2s

#title3
  animation-delay 3s


.footer
  background theorange
  opacity 0.9
  width 100%
  text-align center
  p
    padding 10px 0
    margin 0
