
.menu-top
  position fixed
  top 0
  left 0
  right 0
  height 70px
  //background #15233F
  z-index 1000
  padding 30px 50px
  h1
    font-size 30px
    font-weight 600
    display inline-block
    color #ffffff
    line-height 10px
  ul
    list-style none
    margin 0
    padding 0
    height 42px
    float right
    li
      display inline-block
      height 20px
      vertical-align middle
      padding 11px 0
      a
        font-weight 400
        font-size 20px
        color #fff
        padding 0 20px
        line-height 30px
        vertical-align bottom
.menu-top.stuck
  position fixed
  top 0
  left 0
  right 0
  height 50px
  background #15233F
  z-index 1000
  padding 10px 50px
.splash
  background #15233F url(../images/p.png) fixed
  min-height 650px
  position relative
  .splash-content
    position absolute
    background rgba(0,0,0,0.2)
    left 0
    right 0
    top 0
    bottom 0
    .logozone
      margin-top 200px
      width 40%
      float left
      img
        width 150px
        margin-left 200px
    .textzone
      width 60%
      margin-left 40%
      margin-top 200px
      h2
        font-size 50px
        color #ffffff
        font-weight 600
        margin-bottom 10px
        margin-top 0
        .orange
          color #F7931D


