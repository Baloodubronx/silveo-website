theblue = #102F5F
theorange = #F6921C

.menu-top
  position fixed
  top 0
  left 0
  right 0
  height 60px
  background transparent
  z-index 1000
  padding 10px 50px
  animation-delay 3s
  transition all 1s
  h1
    font-size 30px
    font-weight 600
    display inline-block
    color #ffffff
    line-height 60px
    vertical-align middle
    margin 0
    padding 0
  ul
    list-style none
    margin 0
    padding 0
    height 40px
    float right
    li
      display inline-block
      height 20px
      vertical-align middle
      padding 11px 0
      a
        font-weight 400
        font-size 20px
        color #fff
        padding 0 20px
        line-height 30px
        vertical-align bottom


.stuck
  animation-delay 0s
  animation-duration 0s
