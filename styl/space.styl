.space-container
  text-align center
  h1
    font-weight 600
    margin 0
  h2
  h3
  h4
  h5
    font-weight 300
    margin 20px 0
  h1
    font-size 105px

  h2
    font-size 50px

  h3
    font-size 40px

  h4
    font-size 30px

  h5
    font-size 25px

  p.scrolldown
    margin-top 100px
    color #aaa
    font-weight 200
    span
      display block


.bg1
  background url('../images/1.jpg') no-repeat 50% 50%
  background-size cover

.bg2
  background url('../images/2.jpg') no-repeat 50% 50%
  background-size cover

.hasbg
  .space-inner-frame
    background rgba(255, 255, 255, 0.8)

.direct-access
  position fixed
  top 0
  left 0
  z-index 1000
  padding 10px 20px
  a
    display block
    padding 5px 20px
    text-decoration none
    font-weight 100
    border 1px solid theblue
